package pt.tecnico.sise.se.insure.domain;

import java.util.HashMap;

import pt.tecnico.sise.se.insure.domain.test.Customer;

public class InsuranceCompany {
	

	//new Customer(VALID_INSURANCE_COMPANY, VALID_NIF, VALID_NAME, VALID_POLICY);
	

	private HashMap<String, Customer> customerMap;

	
	public void addCustomer(String insuranceCompany, String nif, String customerName, String policy){
		
		if (customerMap.containsKey(nif)){
			throw new NIFAlreadyInUseException();
		}
		else{
			Customer customer = new Customer (insuranceCompany, nif, customerName, policy);
		}

		
	}

}
